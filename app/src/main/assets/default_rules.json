{
  "version": 1,
  "removeAllParams": false,
  "rules": [
    {
      "id": "google-tracking",
      "hostPattern": ".*\\.google\\..*",
      "parameterPatterns": [
        "utm_.*",
        "gclid",
        "fbclid",
        "dclid",
        "gclsrc"
      ],
      "priority": 1,
      "enabled": true,
      "description": "Remove Google tracking parameters"
    },
    {
      "id": "facebook-tracking",
      "hostPattern": ".*\\.(facebook|fb)\\..*",
      "parameterPatterns": [
        "fbclid",
        "utm_.*",
        "ref"
      ],
      "priority": 2,
      "enabled": true,
      "description": "Remove Facebook tracking parameters"
    },
    {
      "id": "amazon-tracking",
      "hostPattern": ".*\\.amazon\\..*",
      "parameterPatterns": [
        "ref_?",
        "tag",
        "linkCode",
        "camp",
        "creative",
        "creativeASIN",
        "ascsubtag"
      ],
      "priority": 3,
      "enabled": true,
      "description": "Remove Amazon affiliate and tracking parameters"
    },
    {
      "id": "youtube-tracking",
      "hostPattern": ".*\\.(youtube|youtu)\\..*",
      "parameterPatterns": [
        "utm_.*",
        "feature",
        "gclid",
        "fbclid"
      ],
      "priority": 4,
      "enabled": true,
      "description": "Remove YouTube tracking parameters"
    },
    {
      "id": "twitter-tracking",
      "hostPattern": ".*\\.(twitter|t)\\.co.*",
      "parameterPatterns": [
        "utm_.*",
        "ref_src",
        "ref_url",
        "twclid"
      ],
      "priority": 5,
      "enabled": true,
      "description": "Remove Twitter tracking parameters"
    },
    {
      "id": "generic-utm",
      "hostPattern": ".*",
      "parameterPatterns": [
        "utm_source",
        "utm_medium",
        "utm_campaign",
        "utm_term",
        "utm_content"
      ],
      "priority": 100,
      "enabled": true,
      "description": "Remove generic UTM tracking parameters from all sites"
    }
  ]
}
