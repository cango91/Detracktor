{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeBranch"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "before 6am on monday"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "@cango91"
  ],
  "reviewers": [
    "@cango91"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gradle"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "major-update"
      ]
    },
    {
      "groupName": "AndroidX libraries",
      "automerge": true,
      "matchPackageNames": [
        "/^androidx\\./"
      ]
    },
    {
      "groupName": "Android Gradle Plugin",
      "automerge": false,
      "labels": [
        "dependencies",
        "android-gradle-plugin"
      ],
      "matchPackageNames": [
        "/^com\\.android\\./"
      ]
    },
    {
      "groupName": "Kotlin",
      "automerge": false,
      "labels": [
        "dependencies",
        "kotlin"
      ],
      "matchPackageNames": [
        "/^org\\.jetbrains\\.kotlin/"
      ]
    },
    {
      "groupName": "Compose BOM and libraries",
      "automerge": true,
      "matchPackageNames": [
        "/^androidx\\.compose/"
      ]
    }
  ],
  "gradle": {
    "timeout": 300
  },
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "branchConcurrentLimit": 10,
  "commitMessagePrefix": "chore(deps): ",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prTitle": "chore(deps): update {{depName}} to {{newVersion}}",
  "prBodyTemplate": "This PR updates {{depName}} from {{currentVersion}} to {{newVersion}}.\n\n{{#if hasReleaseNotes}}\n## Release Notes\n\n{{releaseNotes}}\n{{/if}}\n\n---\n\n- [ ] If you want to rebase/retry this PR, check this box"
}
